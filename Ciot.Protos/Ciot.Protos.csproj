<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="robocopy &quot;$(SolutionDir)/submodules/protos/ciot&quot; &quot;ciot&quot; /E /XO&#xD;&#xA;if %25ERRORLEVEL%25 LSS 9 exit /B 0" />
  </Target>

  <ItemGroup>
    <None Remove="ciot\proto\v2\ble.proto" />
    <None Remove="ciot\proto\v2\ble_adv.proto" />
    <None Remove="ciot\proto\v2\ble_scn.proto" />
    <None Remove="ciot\proto\v2\ciot.proto" />
    <None Remove="ciot\proto\v2\config_service.proto" />
    <None Remove="ciot\proto\v2\dfu.proto" />
    <None Remove="ciot\proto\v2\errors.proto" />
    <None Remove="ciot\proto\v2\event.proto" />
    <None Remove="ciot\proto\v2\gpio.proto" />
    <None Remove="ciot\proto\v2\http_client.proto" />
    <None Remove="ciot\proto\v2\http_server.proto" />
    <None Remove="ciot\proto\v2\iface.proto" />
    <None Remove="ciot\proto\v2\iface_service.proto" />
    <None Remove="ciot\proto\v2\logger.proto" />
    <None Remove="ciot\proto\v2\mqtt_client.proto" />
    <None Remove="ciot\proto\v2\msg.proto" />
    <None Remove="ciot\proto\v2\ntp.proto" />
    <None Remove="ciot\proto\v2\ota.proto" />
    <None Remove="ciot\proto\v2\storage.proto" />
    <None Remove="ciot\proto\v2\sys.proto" />
    <None Remove="ciot\proto\v2\tcp.proto" />
    <None Remove="ciot\proto\v2\uart.proto" />
    <None Remove="ciot\proto\v2\usb.proto" />
    <None Remove="ciot\proto\v2\wifi.proto" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.29.3" />
    <PackageReference Include="Grpc.Net.Client" Version="2.67.0" />
    <PackageReference Include="Grpc.Tools" Version="2.69.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="ciot\proto\v2\ble.proto" />
    <Protobuf Include="ciot\proto\v2\ble_adv.proto" />
    <Protobuf Include="ciot\proto\v2\ble_scn.proto" />
