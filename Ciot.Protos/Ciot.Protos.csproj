    <Protobuf Include="ciot\proto\v2\gpio.proto" />
    <Protobuf Include="ciot\proto\v2\http_client.proto" />
    <Protobuf Include="ciot\proto\v2\http_server.proto" />
    <Protobuf Include="ciot\proto\v2\iface.proto" />
    <Protobuf Include="ciot\proto\v2\iface_service.proto" />
    <Protobuf Include="ciot\proto\v2\logger.proto" />
    <Protobuf Include="ciot\proto\v2\mqtt_client.proto" />
    <Protobuf Include="ciot\proto\v2\msg.proto" />
